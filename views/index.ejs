<script>
  Splitting();

  const mainVisualTL = gsap.timeline(); //모션 2개 이어붙일경우 timeline이용하기***************
  // mainVisualTL
  //   .from("#mainVisual .slogan h2 .char", { y: 100, opacity: 0, delay: 1, duration: 1, ease: "power4.out", stagger: 0.02 })
  //   .from("#mainVisual .slogan p .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.02 }, 1); //절대시간 1초 *** 마지막 ,1 -> 앞이 안끝나도 "1초"에는 시작하겠다

  mainVisualTL
    .from("#mainVisual .slogan h2 .char", { y: 100, opacity: 0, delay: 1, duration: 1, ease: "power4.out", stagger: 0.02 })
    .from("#mainVisual .slogan p .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.02 }, "-=1"); //상대시간 -1초 *** 마지막 ,"-=1" -> 앞이 끝나는시간 (3초걸린다면) 에서 -1초에서 (2초에서)시작하겠다

  const pause = document.querySelector("#mainVisual .pause");
  const play = document.querySelector("#mainVisual .play");
  pause.addEventListener("click", function () {
    mainVisualSlider.autoplay.stop(); //autoplay 멈추는 기능
    play.style.display = "block";
    pause.style.display = "none";
  });
  play.addEventListener("click", function () {
    mainVisualSlider.autoplay.start(); //autoplay 재시작하는 기능
    pause.style.display = "block";
    play.style.display = "none";
  });

  const mainVisualSlider = new Swiper("#mainVisual", {
    effect: "fade",
    speed: 1000,
    loop: true,
    simulateTouch: false,
    navigation: {
      //이전 , 이후 이동 클릭 버튼
      nextEl: "#mainVisual .next",
      prevEl: "#mainVisual .prev",
    },
    pagination: {
      //페이지 지정 이동 클릭버튼
      el: "#mainVisual .pagination .bullets",
      type: "bullets",
      clickable: true,
    },
    autoplay: {
      ldelay: 3000,
      disableOnInteracion: false,
    },
  });
</script>
